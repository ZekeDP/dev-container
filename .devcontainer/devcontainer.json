{
  "name": "Java 21 Backend (Ubuntu 22.04 LTS)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "backend-dev",
  // Note: workspaceFolder must match PROJECT_HOME in config/.env (doesn't support env vars)
  "workspaceFolder": "/car-rental",
  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-boot-dev-pack",
        "vscjava.vscode-gradle",
        "vscjava.vscode-maven",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ],
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/usr/lib/jvm/temurin-21-jdk-amd64",
            "default": true
          }
        ],
        "java.jdt.ls.java.home": "/usr/lib/jvm/temurin-21-jdk-amd64",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "postCreateCommand": "bash ${PROJECT_HOME}/scripts/run-all.sh",

  "forwardPorts": [8080, 5173],

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false
    }
  }
}